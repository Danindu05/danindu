---
import "../styles/global.css";
---

<html lang="en">
	<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DN</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/ScrollTrigger.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/MotionPathPlugin.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="icon" type="image/png" sizes="32x32" href="assets/favicon1.png">
    <link rel="stylesheet" href="style.css">
   <link rel="stylesheet" href="src/styles/global.css">
</head>
<body class="bg-black text-white">

    
    <!-- CLI Terminal -->
    <div class="cli-terminal" id="cli-terminal">
        <div class="cli-window">
            <div class="cli-header">
                <div class="cli-title">danindu@portfolio:</div>
                <button class="cli-close" id="cli-close">×</button>
            </div>
            <div class="cli-content" id="cli-content">
                <div class="cli-output cli-success">Welcome to Danindu's Portfolio CLI v1.0.0</div>
                <div class="cli-output cli-info">Type '<span class="cli-command">help</span>' to see available commands</div>
                <div class="cli-prompt">
                    <span style="color: #52af5a;">danindu@portfolio</span>:<span style="color: #00d4aa;">~</span>$ 
                    <input type="text" class="cli-input" id="cli-input" autocomplete="off" spellcheck="false">
                </div>
            </div>
        </div>
    </div>
    
    <!-- Navigation -->
    <nav class="fixed top-0 w-full bg-black/20 backdrop-blur-xl z-50 border-b border-white/10 glass-nav">
        <div class="max-w-6xl mx-auto px-6 py-6">
            <div class="flex justify-between items-center">
                <div class="text-xl font-bold text-white">DN</div>
                
                <!-- Desktop Menu -->
                <div class="hidden md:flex space-x-12 items-center">
                    <a href="#home" class="text-gray-400 hover:text-white transition-colors font-medium">Home</a>
                    <a href="#about" class="text-gray-400 hover:text-white transition-colors font-medium">About</a>
                    <a href="#projects" class="text-gray-400 hover:text-white transition-colors font-medium">Projects</a>
                    <a href="#contact" class="text-gray-400 hover:text-white transition-colors font-medium">Contact</a>
                    <button id="cli-mode-btn" class="cli-button">Terminal</button>
                </div>
                
                <!-- Mobile Hamburger -->
                <button class="md:hidden hamburger flex flex-col space-y-1" id="mobile-menu-btn">
                    <span class="w-6 h-0.5 bg-white block"></span>
                    <span class="w-6 h-0.5 bg-white block"></span>
                    <span class="w-6 h-0.5 bg-white block"></span>
                </button>
            </div>
        </div>
        
        <!-- Mobile Menu -->
        <div class="mobile-menu fixed top-0 right-0 h-full w-64 bg-black border-l border-gray-800 md:hidden" id="mobile-menu">
            <div class="flex flex-col space-y-8 p-8 mt-20">
                <div class="text-center mb-4">
                    <h3 class="text-2xl font-black text-white mb-2">MENU</h3>
                    <div class="border-gradient w-16 mx-auto"></div>
                </div>
                <a href="#home" class="text-gray-400 hover:text-white transition-colors font-medium text-xl mobile-menu-link">Home</a>
                <a href="#about" class="text-gray-400 hover:text-white transition-colors font-medium text-xl mobile-menu-link">About</a>
                <a href="#projects" class="text-gray-400 hover:text-white transition-colors font-medium text-xl mobile-menu-link">Projects</a>
                <a href="#contact" class="text-gray-400 hover:text-white transition-colors font-medium text-xl mobile-menu-link">Contact</a>
                <button id="cli-mode-mobile-btn" class="cli-button text-left">Terminal</button>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section id="home" class="min-h-screen flex items-center justify-center bg-black relative overflow-hidden">
        <!-- Parallax Background Elements -->
        <div class="absolute inset-0 parallax-bg" data-speed="0.5">
        </div>
        
        <!-- Animated Glowing Blurs -->
        <div class="absolute inset-0">
            <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-white/5 rounded-full blur-3xl floating-glow" id="glow-1"></div>
            <div class="absolute top-1/3 right-1/4 w-80 h-80 bg-gray-400/3 rounded-full blur-3xl floating-glow" id="glow-2"></div>
            <div class="absolute bottom-1/4 left-1/3 w-72 h-72 bg-white/4 rounded-full blur-3xl floating-glow" id="glow-3"></div>
            <div class="absolute top-1/2 right-1/3 w-64 h-64 bg-gray-300/2 rounded-full blur-3xl floating-glow" id="glow-4"></div>
            <div class="absolute bottom-1/3 right-1/2 w-88 h-88 bg-white/3 rounded-full blur-3xl floating-glow" id="glow-5"></div>
        </div>
        
        <div class="max-w-6xl mx-auto px-6 text-center relative z-10">
            <div class="fade-in" style="animation-delay: 0.1s;">
                <h1 class="text-4xl sm:text-6xl md:text-7xl lg:text-8xl xl:text-9xl font-black text-white mb-12 leading-[0.9] text-center">
                    <span class="block">DANINDU</span>
                    <span class="text-gradient block">NANAYAKKARA</span>
                </h1>
            </div>

            
            <div class="fade-in mb-20" style="animation-delay: 0.4s;">
                <div class="border-gradient max-w-lg mx-auto"></div>
            </div>
            
            <div class="fade-in flex flex-col sm:flex-row gap-8 justify-center" style="animation-delay: 0.5s;">
                <a href="#projects" class="btn-primary btn-enhanced px-16 py-5 rounded-xl text-xl uppercase tracking-wider micro-bounce">
                    View Projects
                </a>
                <a href="#contact" class="btn-secondary btn-enhanced px-16 py-5 rounded-xl text-xl uppercase tracking-wider">
                    Contact Me
                </a>
            </div>
        </div>
    </section>

    <!-- Section Divider -->
    <div class="section-divider"></div>
    
    <!-- About Section -->
    <section id="about" class="section-padding glass-section border-t border-white/10 section-3d transform-3d">
        <div class="max-w-6xl mx-auto px-6">
            <div class="grid lg:grid-cols-2 gap-20 items-center">
                <div class="fade-in">
                    <div class="relative">
                        <img src="/assets/hero.png" 
                             alt="Danindu Nanayakkara" 
                             class="w-full h-[600px] object-cover grayscale border border-gray-800">
                        <div class="absolute inset-0 bg-black/20"></div>
                    </div>
                </div>
                
                <div class="fade-in">
                    <h2 class="text-5xl md:text-6xl font-black text-white mb-12 leading-tight">
                        ABOUT <span class="text-gray-600">ME</span><br>
                    </h2>
                    
                    <div class="text-lg text-gray-300 font-light leading-relaxed">
                        <p>
                            I am a Computer Science undergraduate who’s always been fascinated by how technology works behind the scenes. I enjoy turning ideas into real, working websites and apps. Whether it's front-end design or back-end logic, I love learning how everything connects. Right now, I’m focused on improving my full-stack development skills, exploring frameworks like React. I'm always up for a challenge, and I believe the best way to grow is by building cool things and learning from the process. Outside of coding, I’m usually reading up on tech trends, tinkering with personal projects.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Section Divider -->
    <div class="section-divider"></div>
    
    <!-- Projects Section -->
    <section id="projects" class="section-padding glass-section border-t border-white/10 section-3d transform-3d">
        <div class="max-w-6xl mx-auto px-6">
            <div class="text-center mb-20 fade-in">
                <h2 class="text-5xl md:text-6xl font-black text-white mb-8 float-3d">
                    RECENT<br>
                    <span class="text-gray-600">PROJECTS</span>
                </h2>
                <div class="border-gradient max-w-md mx-auto"></div>
            </div>
            
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 transform-3d">
                <div class="project-card card-3d fade-in">
                    <div class="h-64 overflow-hidden rounded-t-2xl">
                        <img src="assets/cyberzone.png" 
                             alt="Cyberzone E-Commerce Platform Screenshot" 
                             class="w-full h-full object-cover grayscale">
                    </div>
                    <div class="p-8">
                        <h3 class="text-2xl font-bold text-white mb-4 uppercase tracking-wider">Cyberzone</h3>
                        <p class="text-gray-400 mb-8 leading-relaxed">
                            Full-featured e-commerce platform with payments, product management, and modern shopping experience.
                        </p>
                        

                        
                        <div class="flex space-x-4">
                            <a href="https://github.com/Danindu05/ecommerce-website.git" target="_blank" class="btn-primary btn-enhanced px-4 py-2 text-sm font-semibold uppercase tracking-wider rounded-lg">
                                GitHub
                            </a>
                            <a href="https://cyberzone.byethost10.com" target="_blank" class="btn-secondary btn-enhanced px-4 py-2 text-sm font-semibold uppercase tracking-wider rounded-lg">
                                Live Demo
                            </a>
                        </div>
                    </div>
                </div>

                <div class="project-card card-3d fade-in">
                    <div class="h-64 overflow-hidden rounded-t-2xl">
                        <img src="assets/wavenest.png" 
                             alt="WaveNest Ambient Sound Player Screenshot" 
                             class="w-full h-full object-cover grayscale">
                    </div>
                    <div class="p-8">
                        <h3 class="text-2xl font-bold text-white mb-4 uppercase tracking-wider">WaveNest</h3>
                        <p class="text-gray-400 mb-8 leading-relaxed">
                            Ambient sound player website for relaxation and focus, featuring nature sounds and customizable audio mixing.
                        </p>
                        

                        
                        <div class="flex space-x-4">
                            <a href="https://github.com/Danindu05/ambient-sound-player.git" target="_blank" class="btn-primary btn-enhanced px-4 py-2 text-sm font-semibold uppercase tracking-wider rounded-lg">
                                GitHub
                            </a>
                            <a href="https://danindu05.github.io/ambient-sound-player/" target="_blank" class="btn-secondary btn-enhanced px-4 py-2 text-sm font-semibold uppercase tracking-wider rounded-lg">
                                Live Demo
                            </a>
                        </div>
                    </div>
                </div>

                <div class="project-card card-3d fade-in">
                    <div class="h-64 overflow-hidden rounded-t-2xl">
                        <img src="assets/carassistant.png" 
                             alt="Vehicle Buying Assistant Chatbot Screenshot" 
                             class="w-full h-full object-cover grayscale">
                    </div>
                    <div class="p-8">
                        <h3 class="text-2xl font-bold text-white mb-4 uppercase tracking-wider">CAR CHATBOT</h3>
                        <p class="text-gray-400 mb-8 leading-relaxed">
                            AI-powered chatbot that helps customers choose the perfect vehicle based on their needs, budget, and preferences.
                        </p>
                        

                        
                        <div class="flex space-x-4">
                            <a href="https://github.com/Danindu05/vehicle-buying-assistant.git" target="_blank" class="btn-primary btn-enhanced px-4 py-2 text-sm font-semibold uppercase tracking-wider rounded-lg">
                                GitHub
                            </a>
                            <a href="https://danindu05.github.io/vehicle-buying-assistant/" target="_blank" class="btn-secondary btn-enhanced px-4 py-2 text-sm font-semibold uppercase tracking-wider rounded-lg">
                                Live Demo
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="text-center mt-16 fade-in">
                <a href="https://github.com/Danindu05" target="_blank" class="btn-secondary px-12 py-4 rounded-none text-lg uppercase tracking-wider inline-block">
                    View All Projects
                </a>
            </div>
        </div>
    </section>

    <!-- Section Divider -->
    <div class="section-divider"></div>
    
    <!-- Contact Section -->
    <section id="contact" class="section-padding glass-section border-t border-white/10 section-3d transform-3d">
        <div class="max-w-4xl mx-auto px-6">
            <div class="text-center mb-20 fade-in">
                <h2 class="text-5xl md:text-6xl font-black text-white mb-8">
                    LET'S<br>
                    <span class="text-gray-600">CONNECT</span>
                </h2>
                <div class="border-gradient max-w-md mx-auto mb-8"></div>
            </div>
            
            <div class="grid md:grid-cols-2 gap-20">
                <div class="fade-in">
                    <div class="space-y-12">
                        <div>
                            <h3 class="text-2xl font-bold text-white mb-6 uppercase tracking-wider">Get In Touch</h3>
                            <p class="text-gray-400 text-lg leading-relaxed mb-8">
                                I'm always interested in new opportunities and exciting projects. 
                                Let's discuss how we can work together.
                            </p>
                        </div>
                        
                        <div class="space-y-6">
                            <div class="flex items-center space-x-6">
                                <div class="w-12 h-12 bg-white flex items-center justify-center">
                                    <span class="text-black font-bold"><i class="fa-brands fa-linkedin-in"></i></span>
                                </div>
                                <div>
                                    <div class="text-white font-semibold uppercase tracking-wider text-sm">LinkedIn</div>
                                    <a href="https://www.linkedin.com/in/danindu/" target="_blank" class="text-gray-400 hover:text-white transition-colors">
                                        linkedin.com/in/danindu
                                    </a>
                                </div>
                            </div>
                            
                            <div class="flex items-center space-x-6">
                                <div class="w-12 h-12 bg-white flex items-center justify-center">
                                    <span class="text-black font-bold"><i class="fa-brands fa-github"></i></span>
                                </div>
                                <div>
                                    <div class="text-white font-semibold uppercase tracking-wider text-sm">GitHub</div>
                                    <a href="https://github.com/Danindu05" target="_blank" class="text-gray-400 hover:text-white transition-colors">
                                        github.com/Danindu05
                                    </a>
                                </div>
                            </div>
                        </div>
                        

                    </div>
                </div>
                
                <div class="fade-in">
                    <form class="space-y-8" id="contact-form">
                        <div>
                            <input type="text" placeholder="YOUR NAME" class="w-full bg-transparent border-b-2 border-gray-800 py-4 text-white placeholder-gray-600 focus:border-white outline-none transition-colors uppercase tracking-wider" required>
                        </div>
                        <div>
                            <input type="email" placeholder="YOUR EMAIL" class="w-full bg-transparent border-b-2 border-gray-800 py-4 text-white placeholder-gray-600 focus:border-white outline-none transition-colors uppercase tracking-wider" required>
                        </div>
                        <div>
                            <textarea rows="4" placeholder="YOUR MESSAGE" class="w-full bg-transparent border-b-2 border-gray-800 py-4 text-white placeholder-gray-600 focus:border-white outline-none resize-none transition-colors uppercase tracking-wider" required></textarea>
                        </div>
                        <button type="submit" class="btn-primary px-12 py-4 rounded-none text-lg uppercase tracking-wider w-full">
                            Send Message
                        </button>
                    
                    </form>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-black border-t border-gray-800 py-12">
        <div class="max-w-6xl mx-auto px-6">
            <div class="flex flex-col md:flex-row justify-between items-center">
                <div class="text-2xl font-black text-white mb-4 md:mb-0">DN</div>
                <div class="text-gray-400 text-sm uppercase tracking-wider">
                    © 2025 Danindu Nanayakkara.
                </div>
            </div>
        </div>
    </footer>
<script defer src="/script.js"></script>
</body>
</html>
